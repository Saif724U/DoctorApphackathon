<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.m36.doctorapp.PatientAccess">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:background="#F0F0F0"
        android:layout_height="wrap_content">
    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:text="Doctor Name: \n"
            />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:id="@+id/DoctorName"
            android:layout_height="wrap_content"
            />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"

        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Hospital Name:  Lanka Hospital\n"
        />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Hospital Address: 578 Elvitigala Mawatha, Colombo 00500\n"
        />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:foreground="#FF4500"
        android:layout_below="@id/patientID"
        android:id="@+id/line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/scanqr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="#F0F0F0"
        android:layout_marginRight="10dp"
        android:text="@string/QRprompt" />
    <Button
        android:id="@+id/Emergency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="#FF4500"
        android:text="Emergency" />

</LinearLayout>
    </RelativeLayout>
</LinearLayout>
